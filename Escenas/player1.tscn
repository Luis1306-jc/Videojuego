script/source = "extends CharacterBody2D

const SPEED = 300.0
const JUMP_VELOCITY = -400.0
const LIMITE_CAIDA = 1000.0 

@onready var sprite = $AnimatedSprite2D

var atacando = false
var juego_terminado = false 

func _physics_process(delta: float) -> void:
	
	if position.y > LIMITE_CAIDA and not juego_terminado:
		finalizar_juego()

	if not is_on_floor():
		velocity += get_gravity() * delta

	#aun no funcina bien
	if Input.is_physical_key_pressed(KEY_1) and not atacando:
		atacar()

	
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor() and not atacando:
		velocity.y = JUMP_VELOCITY

	
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	
	if not atacando and not juego_terminado:
		if direction > 0:
			sprite.scale.x = 1
		elif direction < 0:
			sprite.scale.x = -1

		if direction:
			velocity.x = direction * SPEED
		else:
			velocity.x = move_toward(velocity.x, 0, SPEED)
	else:
		velocity.x = 0

	move_and_slide()
	update_animations(direction)

# solo hay que ver como inserta una imagen para cuando caiga fin de juego o algo asi
func finalizar_juego():
	juego_terminado = true
	print(\"¡HAS CAÍDO! JUEGO TERMINADO\") # cambiar la condicion para la imagen
	
	
	await get_tree().create_timer(2.0).timeout
	get_tree().quit()

func atacar():
	atacando = true
	sprite.play(\"Ataque\")

func update_animations(direction):
	if atacando or juego_terminado:
		return

	if not is_on_floor():
		sprite.play(\"Jump\")
	elif direction != 0:
		sprite.play(\"Run\")
	else:
		sprite.play(\"Idle\")

func _on_animated_sprite_2d_animation_finished() -> void:
	if sprite.animation == \"Ataque\":
		atacando = false
"

