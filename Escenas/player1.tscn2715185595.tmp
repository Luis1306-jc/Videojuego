script/source = "extends CharacterBody2D

const SPEED = 300.0
const JUMP_VELOCITY = -400.0

@onready var sprite = $AnimatedSprite2D

var atacando = false

func _physics_process(delta: float) -> void:
	if not is_on_floor():
		velocity += get_gravity() * delta

	# 1. USAR \"just_pressed\" para que solo detecte un clic y no se reinicie
	if Input.is_key_just_pressed(KEY_1) and not atacando:
		atacar()

	# 2. SALTO
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor() and not atacando:
		velocity.y = JUMP_VELOCITY

	# 3. MOVIMIENTO
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	
	if not atacando:
		if direction > 0:
			sprite.scale.x = 1
		elif direction < 0:
			sprite.scale.x = -1

		if direction:
			velocity.x = direction * SPEED
		else:
			velocity.x = move_toward(velocity.x, 0, SPEED)
	else:
		# Frenado seco al atacar para que no se deslice
		velocity.x = 0

	move_and_slide()
	update_animations(direction)

func atacar():
	atacando = true
	sprite.play(\"Ataque\")

func update_animations(direction):
	if atacando:
		return # Si ataca, no hace nada más

	if not is_on_floor():
		sprite.play(\"Jump\")
	elif direction != 0:
		sprite.play(\"Run\")
	else:
		sprite.play(\"Idle\")

# ASEGÚRATE DE QUE ESTA FUNCIÓN TENGA EL ICONO VERDE AL LADO (Indica que está conectada)
func _on_animated_sprite_2d_animation_finished() -> void:
	if sprite.animation == \"Ataque\":
		atacando = false
"

